{
  "name": "google-reviews-api",
  "version": "2.0.0",
  "description": "Google Play Store Reviews API with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "vercel-build": "tsc && echo 'Build completed'",
    "vercel-dev": "tsx src/index.ts"
  },
  "keywords": ["google-play", "reviews", "api", "typescript", "vercel"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "google-play-scraper": "^10.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}